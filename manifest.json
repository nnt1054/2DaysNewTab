{
    "manifest_version": 2,
    "name": "Best New Tab Page",
    "version": "0.0.4",
    "description": "The absolute best new tab page",
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/*",
        "identity",
        "bookmarks",
        "storage",
        "tabs",
        "unlimitedStorage",
        "https://accounts.google.com/*",
        "identity.email"
      ],
    "chrome_url_overrides" : {"newtab" : "index.html"},
    "content_scripts": [{
      "js": ["js/popup.js"],
      "matches": ["http://*/*", "https://*/*"] }],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://apis.google.com https://query.yahooapis.com; object-src 'self'",
    "oauth2": {
        "client_id": "559223177845-tlcomk97jck9d9tjdr27hgs3eu95b5qi.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/plus.login https://www.googleapis.com/auth/userinfo.email",
            "https://www.googleapis.com/auth/calendar",
            "https://www.googleapis.com/auth/plus.login",
            "https://www.googleapis.com/auth/plus.me"
        ]
    }
}
